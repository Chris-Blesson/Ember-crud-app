<form {{on "submit" this.createPost}}>
    <div>
        <label for="title">Title</label>
        {{input type="text" id="title" value=title}}
    </div>

    <div>
        <label for="body">Post</label>
        {{textarea id="body" cols="80" rows="8" value=body}}
    </div>

    <button type="submit">Publish</button>
</form>
